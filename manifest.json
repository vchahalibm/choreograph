{
  "manifest_version": 3,
  "name": "Choreograph",
  "version": "1.0.0",
  "description": "Automated browser actions using Chrome Debugger API with Granite 4.0 AI-powered natural language interface",
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/selectorEngine.js",
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "pages/config.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/injected.js",
        "scripts/ai-worker.js",
        "scripts/ai-worker.bundled.js",
        "scripts/*.wasm",
        "scripts/*.mjs"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
